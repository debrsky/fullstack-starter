{
	"name": "fullstack-starter",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"npm": "8.x",
		"node": "16.x"
	},
	"scripts": {
		"start": "node ./server/bin/www",
		"dev-server": "nodemon ./server/bin/www",
		"dev-front": "gulp watch",
		"dev-concurrently": "concurrently --kill-others \"npm run dev-front\" \"npm run dev-server\"",
		"dev": "cross-env-shell NODE_ENV=development \"npm run build && npm run dev-concurrently\"",
		"build": "gulp build",
		"lint:js": "eslint .",
		"lint:pug": "pug-lint .",
		"lint:style": "stylelint front-src/less/**/*.less"
	},
	"optionalDependencies": {
		"fsevents": "2.x.x"
	},
	"dependencies": {
		"connect-livereload": "^0.6.1",
		"cookie-parser": "~1.4.4",
		"debug": "~2.6.9",
		"dotenv": "^16.0.1",
		"express": "~4.16.1",
		"http-errors": "~1.6.3",
		"livereload": "^0.9.3",
		"morgan": "~1.9.1",
		"nodemon": "^2.0.16",
		"pug": "^3.0.2"
	},
	"devDependencies": {
		"@hyrious/esbuild-plugin-commonjs": "^0.2.1",
		"autoprefixer": "^10.4.7",
		"concurrently": "^7.2.1",
		"cross-env": "^7.0.3",
		"cssnano": "^5.1.11",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-semistandard": "^16.0.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-sonarjs": "^0.13.0",
		"gulp": "^4.0.2",
		"gulp-esbuild": "^0.10.3",
		"gulp-htmlmin": "^5.0.1",
		"gulp-less": "^5.0.0",
		"gulp-plumber": "^1.2.1",
		"gulp-postcss": "^9.0.1",
		"gulp-pug": "^5.0.0",
		"gulp-pug-linter": "^1.5.0",
		"gulp-rename": "^2.0.0",
		"gulp-sourcemaps": "^3.0.0",
		"postcss-less": "^6.0.0",
		"prettier": "^2.6.2",
		"pug-lint": "^2.6.0",
		"stylelint": "^14.8.5",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-standard": "^25.0.0",
		"stylelint-less": "^1.0.5",
		"stylelint-order": "^5.0.0",
		"stylelint-prettier": "^2.0.0",
		"svelte": "^3.48.0"
	}
}
